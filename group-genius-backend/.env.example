# Copy this file to `.env` and update the values before running locally.
# Spring Boot reads environment variables automatically, so export them in your shell
# or use a tool like `direnv`/`dotenv` to load them.

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=jdbc:mysql://localhost:3306/study_group_finder?createDatabaseIfNotExist=true
DATABASE_USERNAME=
DATABASE_PASSWORD=

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Set to true to enable real email sending (false = console logging only)
EMAIL_ENABLED=true

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# ==============================================
# SMTP CONFIGURATION (Required if EMAIL_ENABLED=true)
# ==============================================
# Gmail SMTP Configuration (example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

