{
  "name": "study-group-finder",
  "private": true,
  "version": "1.0.0",
  "description": "Study Group Finder - Full-stack application with Spring Boot backend and React frontend",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd studygroup-frontend && npm run dev",
    "dev:backend": "cd studygroup-backend && ./mvnw spring-boot:run",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd studygroup-frontend && npm install",
    "install:backend": "cd studygroup-backend && ./mvnw dependency:resolve",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd studygroup-frontend && npm run build",
    "build:backend": "cd studygroup-backend && ./mvnw clean package -DskipTests",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd studygroup-frontend && npm test",
    "test:backend": "cd studygroup-backend && ./mvnw test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd studygroup-frontend && npm run lint",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}